<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Here you put the rest of your current view-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple"
    android:orientation="vertical">

    <ImageView android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="1000dp"
        android:maxHeight="42dp"
        android:scaleType="fitCenter"
        android:src="@drawable/philosophy" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16sp"
        android:text="Philosophy is a study of knowledge?"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#8BC34A"
        android:textStyle="bold" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group_one"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/yes_radio_butt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:textColor="#EF5350"
            android:text="True"
            android:onClick="onClick"
            android:textAppearance="?android:textAppearanceMedium" />
        <RadioButton
            android:id="@+id/radio_false1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#EF5350"
            android:text="False"
            android:onClick="onClick"
            android:textAppearance="?android:textAppearanceMedium" />
    </RadioGroup>

    <TextView
        android:id="@+id/title_text_vie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16sp"
        android:text="Did Ujamaa emerge as an economic philosopher, during the period of African Socialist Philosophy?"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#8BC34A"
        android:textStyle="bold" />
    <RadioGroup
        android:id="@+id/radio_group_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/yes_radio_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:textColor="#EF5350"
            android:text="True"
            android:textAppearance="?android:textAppearanceMedium" />
        <RadioButton
            android:id="@+id/no_radio_bu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#EF5350"
            android:text="False"
            android:textAppearance="?android:textAppearanceMedium" />
    </RadioGroup>

    <TextView
        android:id="@+id/title_text_vi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16sp"
        android:text=" Augustine of Hippo was a cornerstone of Rock philosophy."
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#8BC34A"
        android:textStyle="bold" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/yes_radio_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:textColor="#EF5350"
            android:text="True"
            android:textAppearance="?android:textAppearanceMedium" />
        <RadioButton
            android:id="@+id/no_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#EF5350"
            android:text="False"
            android:textAppearance="?android:textAppearanceMedium" />
    </RadioGroup>

    <TextView
        android:id="@+id/title_text_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16sp"
        android:text="African political and economic philosophical developments also had a notable impact on the colonial movements of many non-African peoples around the world."
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#8BC34A"
        android:textStyle="bold" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/yes_radi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:textColor="#EF5350"
            android:text="True"
            android:textAppearance="?android:textAppearanceMedium" />
        <RadioButton
            android:id="@+id/no_rad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#EF5350"
            android:text="False"
            android:textAppearance="?android:textAppearanceMedium" />
    </RadioGroup>

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16sp"
        android:text="In the Horn of Africa, there are a number of sources documenting the development of a distinct Ethiopian philosophy from the first millennium onwards."
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#8BC34A"
        android:textStyle="bold" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/yes_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EF5350"
            android:layout_marginLeft="90dp"
            android:text="True"
            android:textAppearance="?android:textAppearanceMedium" />
        <RadioButton
            android:id="@+id/no_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#EF5350"
            android:text="False"
            android:textAppearance="?android:textAppearanceMedium" />
    </RadioGroup>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="100"
        android:progress="40"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="your answer"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="#EF5350"
        android:id="@+id/display_text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="#EF5350"
            android:layout_below="@+id/textView"
            android:onClick="exitButton"
            android:text="Back"
            android:layout_gravity="right"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:background="#EF5350"
        android:textColor="#FFFFFF"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="180dp"
        android:layout_below="@+id/textView"
        android:onClick="StartActivity"
        android:layout_gravity="left"
        android:text="Results" />
    </LinearLayout>

</LinearLayout>
</ScrollView>